---
import { flutterList } from "../scripts/projects_list";
import ProjectCard from "./ProjectCard.astro";
---

<!-- Homepage Projects Showcase Component -->
<section class="py-16 bg-app-navy">
  <div class="container mx-auto px-4">
    <div class="max-w-6xl mx-auto">
      <div class="flex flex-col md:flex-row md:items-end justify-between mb-12">
        <div>
          <h2 class="text-3xl font-bold text-white mb-4">Featured Projects</h2>
          <p class="text-xl text-gray-400">
            Solving real-world problems with elegant code
          </p>
        </div>
        <a
          href="/works"
          class="mt-4 md:mt-0 text-indigo-400 hover:text-indigo-300 flex items-center"
        >
          <span>View All Projects</span>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 ml-1"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
          </svg>
        </a>
      </div>

      <!-- Projects Grid -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {flutterList.map((project) => <ProjectCard project={project} />)}
      </div>

      <!-- GitHub Stats -->
      <div class="mt-16 bg-slate-800 rounded-lg p-6 border border-slate-700">
        <div class="flex flex-col md:flex-row md:items-center justify-between">
          <div class="mb-6 md:mb-0">
            <h3 class="text-xl font-bold text-white mb-2">
              Open Source Contributions
            </h3>
            <p class="text-gray-300">
              Check out my contributions to the Flutter ecosystem
            </p>
          </div>

          <div class="flex flex-wrap gap-4">
            <div class="px-4 py-3 bg-slate-700 rounded-lg">
              <div class="text-sm text-gray-400">GitHub Stars</div>
              <div class="text-xl font-bold text-white">20+</div>
            </div>

            <div class="px-4 py-3 bg-slate-700 rounded-lg">
              <div class="text-sm text-gray-400">Repositories</div>
              <div class="text-xl font-bold text-white">15+</div>
            </div>

            <div class="px-4 py-3 bg-slate-700 rounded-lg">
              <div class="text-sm text-gray-400">Contributions</div>
              <div class="text-xl font-bold text-white">300+</div>
            </div>
          </div>
        </div>

        <div class="mt-6 flex justify-center">
          <a
            href="https://github.com/cephas"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center px-6 py-3 bg-slate-700 hover:bg-slate-600 text-white rounded-lg transition duration-300"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="20"
              height="20"
              viewBox="0 0 24 24"
              fill="currentColor"
              class="mr-2"
            >
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
            <span>View GitHub Profile</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
