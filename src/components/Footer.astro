---
import { developer, baseUrl } from "../scripts/constants";

// Props (parameters) type declaration
interface Props {
  isDefault: boolean;
}

const {
  // whether this is the default footer or not
  isDefault,
} = Astro.props;

//
---

<footer
  id="footer"
  class=`flex flex-col  px-4 py-4 md:grid md:grid-cols-2 lg:grid lg:grid-cols-2 lg:gap-4 lg:px-10 text-xs text-center justify-center md:text-start lg:text-start ${isDefault?"text-xephas-white bg-xephas-navy": "text-xephas-navy"}`
>
  <!-- Site Owner -->
  <div class="space-y-2 mb-2">
    <span class="uppercase font-bold">Crafted, Engineered, and Brought to Life for:</span>

    <p class="text-lg font-bold text-xephas-yellow">
      {developer.copyright}
    </p>
    <p class="text-xs italic text-xephas-yellow">
      {developer.copyrightYear} • All Rights Reserved
    </p>
  </div>

  <!-- Credits -->
  <div class="space-y-2 flex flex-col">
    <!-- Developers -->
    <div  class="flex flex-col md:flex-row lg:flex-row space-x-2 space-y-1">
      <span class="uppercase text-sm font-bold">★ Developers:</span>
      <p>
        <a
          href={developer.footerUrl}
          class=`underline text-xephas-yellow font-bold ${isDefault? "text-xephas-white": ""}`
          target="_blank"
          rel="noopener">{developer.footerDev}</a
        >
        in Collaboration with
        <a
          href={developer.footerCollaboratorUrl}
          class=`underline text-xephas-yellow font-bold ${isDefault? "text-xephas-white": ""}`
          target="_blank"
          rel="noopener">{developer.footerCollaborator}</a
        >
      </p>
    </div>

    <!-- Tech -->
    <div class="flex flex-col md:flex-row lg:flex-row space-x-2 space-y-1">
      <span class="uppercase text-sm font-bold">★ Tech Stack:</span>
      <p class="uppercase">
        <a
          href="https://astro.build/"
          class=`underline text-xephas-yellow font-bold ${isDefault? "text-xephas-white": ""}`
          target="_blank"
          rel="noopener">Astro</a
        >
        &amp;
        <a
          href="https://tailwindcss.com/"
          class=`underline text-xephas-yellow font-bold ${isDefault? "text-xephas-white": ""}`
          target="_blank"
          rel="noopener">TailwindCSS</a
        >
      </p>
    </div>

    <!-- Code -->
    <div  class="flex flex-col md:flex-row lg:flex-row space-x-2 space-y-1">
      <span class="uppercase text-sm font-bold">★ Source Code:</span>
      <p>
        <a
          href={developer.repoUrl}
          class=`underline text-xephas-yellow font-bold ${isDefault? "text-xephas-white": ""}`
          target="_blank"
          rel="noopener">Open-Sourced on Github</a
        >
      </p>
    </div>
  </div>
</footer>
