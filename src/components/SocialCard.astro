---
interface Props {
  handle: string;
  href: string;
  colors: string;
}

const { href, handle,colors } = Astro.props;
---

<a
  class=`border-2 p-5  transition-all hover:cursor-pointer duration-300  rounded-lg ${colors}`
  target="_blank"
  href={href}
  rel="noopener noreferrer"
>
  <div class="flex items-center justify-center space-y-4">
    <!-- use slot, to insert page contents here-->
    <slot />
  </div>
  <h2 class="mt-4 text-xl font-bold text-center">{handle}</h2>
</a>
