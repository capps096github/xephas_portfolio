    target="_blank"
    class="inline-flex flex-row items-center px-4 py-2 text-xs font-extrabold text-center uppercase rounded-lg text-white bg-red-600 hover:cursor-pointer"
  >
   

    <svg
      xmlns="http://www.w3.org/2000/svg"
      height="24"
      class="fill-current mr-2"
      width="24"
      viewBox="0 0 512 512"
