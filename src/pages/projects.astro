---
import Portfolio from "../layouts/Portfolio.astro";
import AppCards from '../components/ProjectCards.astro'
import repoData from '../data/repos.json'
export interface Props {
  url: string;
  name: string;
  description: string;
  projectType: string;
}
---

<!-- Projects -->
<Portfolio
  pageTitle="Projects"
  pageUrl="/projects"
  header="Sample Projects"
  pageDescription="This is what I've been working on."
>

<ul class="app-card-list">
  {
    repoData.map((repoData) => {
      return (
        <AppCards
          name={repoData.name}
          url={repoData.url}
          description={repoData.description}
          projectType={repoData.projectType}
        />
      );
    })
  }
  </ul>

</Portfolio>
