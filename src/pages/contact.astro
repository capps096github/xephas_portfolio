---
import Portfolio from "../layouts/Portfolio.astro";
import SocialLinks from "../components/SocialLinks.astro";
import socialData from "../data/social.json"
---

<!-- Contact -->
<Portfolio
  pageTitle="Contact me!"
  pageUrl="/contact"
  header="Let's connect"
  pageDescription="Ping me if you want to work together or just say hi!"
>

<ul class="app-card-list social-link-list">
  {
    socialData.map((socialData) => {
      return (
        <SocialLinks
          name={socialData.name}
          url={socialData.url}
          image={socialData.image}
        />
      );
    })
  }
</ul>

  
</Main>
</Layout>






</Portfolio>


<style>
  .social-link-list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  list-style: none;
  padding: 0;
  }
  /*show all 4 in one row*/
  .social-link-list > li {
  flex: 1 1 25%;
  }
  p {
  font-size: 2.5rem;
  line-height: 2.25rem;
  }
  </style>