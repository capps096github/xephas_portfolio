---
import Portfolio from "../layouts/Portfolio.astro";
import { contributions } from "../scripts/contributions";
import LeftArticle from "../components/LeftArticle.astro";
import RightArticle from "../components/RightArticle.astro";
---

<!-- Community -->
<Portfolio
  pageTitle="Community"
  pageUrl="/community"
  header="My Community Talks, Trainings & Events"
  pageDescription="Various trainings, talks and events I have been a part of."
>
  {
    contributions.map((contribution, index) => {
      // is even
      const isEven = index % 2 === 0;
      
      
      // if is even, render aticle 2 else article 1
      return isEven ? (
        <LeftArticle contribution={contribution} />
      ) : (
        <RightArticle contribution={contribution} />
      );
    })
  }
</Portfolio>
